<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/vegimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>

            <!--TITLE-->
            <TextView
                android:id="@+id/vegtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_below="@+id/vegimg"
                />

            <!--Description heading-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/zvegdesc"
                android:layout_below="@+id/vegtitle"
                android:text="Description"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:textSize="20dp"
                android:fontFamily="serif"
                />

            <!--Description-->
            <TextView
                android:id="@+id/vegdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#000000"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="3dp"
                android:layout_below="@+id/zvegdesc"/>

            <!--Vitamins heading-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/zvegvit"
                android:layout_below="@+id/vegdesc"
                android:textColor="#000000"
                android:text="Vitamins &#38; Minerals"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:textSize="20dp"
                android:fontFamily="serif"/>

            <!--Vitamins-->
            <TextView
                android:id="@+id/vegvit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#000000"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/zvegvit"/>

            <!--Prevention Heading-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/zvegprev"
                android:textColor="#000000"
                android:layout_below="@+id/vegvit"
                android:text="Benefits &#38; Disease Prevented"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:textSize="20dp"
                android:fontFamily="serif"/>

            <!--Prevention-->
            <TextView
                android:id="@+id/vegprev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="TextView"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/zvegprev"
                android:layout_marginBottom="20dp"/>

        </RelativeLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>